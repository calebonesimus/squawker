<div class="row top-border">
  <div class="col-lg-3">
    <%= image_tag squawk.user.avatar, class: "squawk-image" %>
  </div>
  <div class="col-lg-9">
    <div class="row">
      <p>
        <%= link_to squawk.user.first_name, profile_view_path(username: squawk.user.username) %>
        <span class="light-text">@<%= squawk.user.username %></span>
      </p>
      <h4><%= squawk.body %></h4>
    </div>
  </div>
</div>
