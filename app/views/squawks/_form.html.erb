<div class="col-xs-6">
  <%= bootstrap_form_for(@squawk) do |f| %>
    <% if @squawk.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@squawk.errors.count, "error") %> prohibited this squawk from being saved:</h2>

        <ul>
        <% @squawk.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
