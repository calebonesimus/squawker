<div class="row text-center">
  <img src="<%= user.avatar %>" onerror="this.src='<%=image_path("image1.jpg")%>';" alt="Missing Image">
</div>

<div class="row text-center">
    <p><%= user.first_name %><p>
    <p><%= user.username %><p>
    <p><%= user.bio %><p>
</div>

<div class="row text-center">
  <div class="col-xs-4 text-center">
    <p><small>Squawks</small><br /><%= user.squawks.count %></p>
  </div>
  <div class="col-xs-4 text-center">
    <p><small>Following</small> <%= user.follows.count %></p>
  </div>
  <div class="col-xs-4 text-center">
    <p><small>Followers</small> <%= user.followers.count %></p>
  </div>
</div>
