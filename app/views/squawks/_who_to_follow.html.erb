<div class="row">
  <div class="col-xs-4">
    <%= image_tag(user.avatar, :class => "squawk-image") %>
  </div>

  <div class="col-xs-7 col-xs-offset-1">
    <p><%= user.first_name %> <span class="light-text">@<%= user.username %></span><p>
    <!-- Following and unfollowing -->
    <% if current_user.following?(user) %>
      <%= button_to "Unfollow", unfollow_path(username: user.username), :class => "btn btn-primary btn-sm", :method => :post %>
    <% else %>
      <%= button_to "Follow", follow_path(username: user.username), :class => "btn btn-primary btn-sm", :method => :post %>
    <% end %>
  </div>
</div>
